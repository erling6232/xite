#!/usr/bin/make -f
# -*- makefile -*-
#
PACKAGE=xite

# DebHelper control
export DH_ALWAYS_EXCLUDE=CVS:.cvsignore:.git

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic -fstack-protector-strong -Wno-format-security # -Wformat # -Werror=format-security
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --with autoreconf

override_dh_missing:
	dh_missing -X.la

#override_dh_auto_configure:
#        dh_auto_configure -- \
#                --with-math \
#                --author="Osamu Aoki"

